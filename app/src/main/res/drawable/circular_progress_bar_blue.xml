<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Anillo de fondo -->
    <item>
        <shape
            android:shape="ring"
            android:innerRadiusRatio="2.5"
            android:thickness="8dp"
            android:useLevel="false">
            <solid android:color="#E3F2FD" /> <!-- Un azul muy pÃ¡lido o gris claro -->
        </shape>
    </item>

    <!-- Anillo de progreso -->
    <item>
        <rotate
            android:fromDegrees="-90"
            android:toDegrees="-90">
            <shape
                android:shape="ring"
                android:innerRadiusRatio="2.5"
                android:thickness="8dp"
                android:useLevel="true">
                <solid android:color="#2196F3" /> <!-- Tu color azul principal -->
            </shape>
        </rotate>
    </item>
</layer-list>