<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_rounded_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agendar Nueva Cita"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textStyle="bold"
        android:textColor="#343A40"
        android:layout_gravity="center_horizontal"/>

    <!-- 1. Seleccionar Servicio --><TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="¿Qué servicio necesitas?"
    android:layout_marginTop="24dp"
    android:textAppearance="?attr/textAppearanceSubtitle1"
    android:textColor="#343A40"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_servicio"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp">

        <AutoCompleteTextView
            android:id="@+id/autocomplete_servicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Selecciona un servicio"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 2. Seleccionar Fecha (Material Calendar View) --><TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Elige el día"
    android:layout_marginTop="16dp"
    android:textAppearance="?attr/textAppearanceSubtitle1"
    android:textColor="#343A40"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">
        <!-- CalendarView dentro de una Card para estética --><CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MaterialCalendarTheme" /> <!-- Asegurar un tema compatible --></com.google.android.material.card.MaterialCardView>


    <!-- 3. Seleccionar Hora --><TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Horarios disponibles"
    android:layout_marginTop="16dp"
    android:textAppearance="?attr/textAppearanceSubtitle1"
    android:textColor="#343A40"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_horarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:chipSpacing="8dp"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip style="@style/Widget.MaterialComponents.Chip.Choice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="09:00 AM"/>
        <com.google.android.material.chip.Chip style="@style/Widget.MaterialComponents.Chip.Choice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="09:30 AM"/>
        <com.google.android.material.chip.Chip style="@style/Widget.MaterialComponents.Chip.Choice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="11:00 AM" android:enabled="false"/>
        <com.google.android.material.chip.Chip style="@style/Widget.MaterialComponents.Chip.Choice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="11:30 AM"/>

    </com.google.android.material.chip.ChipGroup>

    <!-- Botón de Confirmar --><com.google.android.material.button.MaterialButton
    android:id="@+id/btn_confirmar_nueva_cita"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Agendar mi Cita"
    android:layout_marginTop="24dp"
    android:paddingVertical="14dp"
    app:cornerRadius="16dp"
    android:backgroundTint="#00A79D"/>

</LinearLayout>